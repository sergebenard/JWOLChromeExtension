{
    "name": "Watchtower Online Library Search - Unofficial",
    "description": "Use the context menu to search words on Watch Tower Library",
    "version": "1.1",
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html"
    },
    "applications": {
        "gecko": {
            "id": "serge.benard@gmail.com"
        }
    },
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": [
            "resources_scopes.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "options.html"
    },
    "icons": {
        "16": "JWOL16.png",
        "48": "JWOL48.png",
        "128": "JWOL128.png"
    }
}